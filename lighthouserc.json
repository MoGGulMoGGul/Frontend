{
  "ci": {
    "collect": {
      "startServerCommand": "next start -p 3000",
      "url": [
        "http://localhost:3000/",
        "http://localhost:3000/mytip",
        "http://localhost:3000/group/1",
        "http://localhost:3000/search?scope=all"
      ],
      "numberOfRuns": 3,
      "puppeteerScript": "./scripts/puppeteer-login.cjs",
      "puppeteerLaunchOptions": {
        "args": ["--no-sandbox", "--disable-dev-shm-usage"]
      }
    },
    "assert": {
      "preset": "lighthouse:recommended"
    },
    "upload": {
      "target": "filesystem",
      "outputDir": ".lighthouse"
    }
  }
}
